{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/demo.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/blog.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/post.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/automated-content-generator.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/blog"
    },
    {
      "src": "/api/demo",
      "dest": "/api/demo.js"
    },
    {
      "src": "/blog",
      "dest": "/api/blog.js"
    },
    {
      "src": "/post",
      "dest": "/api/post.js"
    },
    {
      "src": "/api/automated-content-generator",
      "dest": "/api/automated-content-generator.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/automated-content-generator",
      "schedule": "0 11 * * 1,4"
    }
  ]
}